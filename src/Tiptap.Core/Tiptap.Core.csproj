<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <!-- NuGet package metadata -->
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>Tiptap.NET</PackageId>
    <PackageTags>tiptap;editor;richtext;prosemirror;dotnet</PackageTags>
    <Version>1.0.0</Version>
    <Authors>Cole Miller</Authors>
    <Company>Viztech</Company>
    <Description>C# port of tiptap-php, a headless rich-text editor toolkit for .NET.</Description>
    <PackageProjectUrl>https://github.com/ColeViztech/tiptap-dotnet</PackageProjectUrl>
    <RepositoryUrl>https://github.com/ColeViztech/tiptap-dotnet</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="AngleSharp" Version="1.0.5" />
    <PackageReference Include="System.Text.Json" Version="9.0.9" />
  </ItemGroup>

  <!-- Make sure README is included in NuGet -->
  <ItemGroup>
    <None Include="..\..\README.md" Pack="true" PackagePath="" />
  </ItemGroup>
</Project>